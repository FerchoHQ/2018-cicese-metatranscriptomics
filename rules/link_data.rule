rule link_fq1:
    input: lambda wildcards:"{}".format(samples.loc[(wildcards.sample,wildcards.unit), "fq1"])
    output: join(DATA_DIR,"{sample}_{unit}_1.fq.gz")
    shell: "cp {input} {output}"

